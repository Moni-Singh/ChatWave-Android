<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatWave" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryVariant">@color/lightGrey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnContainer">@color/white</item>
        <item name="colorSecondaryVariant">@color/lightGreen</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lightGrey</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>