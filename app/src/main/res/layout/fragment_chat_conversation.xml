<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_8sdp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userChatHistoryRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/chatTypeCardView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="1dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chatTypeCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
      android:layout_marginBottom="@dimen/_3sdp"
        app:cardBackgroundColor="#cdcdcd"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp">

            <EditText
                android:id="@+id/edtmessagebox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Enter Your Message"
                android:maxLines="3"
                android:padding="@dimen/_5sdp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/userSendMessageCv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/lightGreen"
        app:cardCornerRadius="@dimen/_50ssp"
        app:cardElevation="@dimen/_8sdp"
        >

        <ImageView
            android:id="@+id/userSendMessage"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            android:padding="@dimen/_3sdp"
            android:layout_gravity="center"
            android:src="@drawable/send_message"
            app:tint="@color/white" />

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
